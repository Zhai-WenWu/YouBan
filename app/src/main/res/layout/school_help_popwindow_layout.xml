<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_33333333">

    <LinearLayout
        android:id="@+id/layout_in"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_fafafa">

        <TextView
            android:id="@+id/order_by_time_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最新发布"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/order_by_school_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="校友发布"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/order_by_diatance_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我附近的"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/order_by_heat_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最热发布"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14"
            android:visibility="visible" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_in" />

</RelativeLayout>