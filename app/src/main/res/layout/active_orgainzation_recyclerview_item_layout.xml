<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout android:layout_width="79dp"
        android:layout_height="96dp"
        android:id="@+id/orgain_layout"
        android:background="@drawable/home_recommend_orgain_bg"
        android:layout_marginTop="6dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">

        <ImageView
            android:id="@+id/service_view"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/error_bg"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/service_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_11"
            android:text="标签名称"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"/>

        <CheckBox
            android:id="@+id/service_type_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:button="@null"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_13"
            android:checked="false"
            />



    </RelativeLayout>

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="22.5dp"
        android:layout_height="22.5dp"
        android:layout_alignRight="@id/orgain_layout"
        android:layout_marginRight="-6dp"
        android:background="@drawable/hobby_select"
        android:visibility="gone"/>



</RelativeLayout>