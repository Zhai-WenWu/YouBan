<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/smContentView"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/color_ffffff"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/nick_name_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/user_image_view"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxEms="10"
            android:text="昵称"
            android:textColor="@color/color_333333" />

        <TextView
            android:id="@+id/smMenuViewRight"
            android:layout_width="50dp"
            android:layout_height="23dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/color_ffee00"
            android:gravity="center"
            android:text="移除"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_12" />


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_view"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="将用户从黑名单删除，即可解除对该用户的屏蔽"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11"
        android:visibility="gone" />

</LinearLayout>
