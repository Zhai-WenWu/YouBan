<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fafafa"
    android:paddingBottom="13dp"
    android:paddingEnd="22dp"
    android:paddingTop="13dp">


    <ImageView
        android:id="@+id/iv_school_goods_ima"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tv_school_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/iv_school_goods_ima"
        android:lines="2"
        android:text="商品名称"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/tv_school_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv_school_goods_praice"
        android:paddingEnd="16dp"
        android:layout_below="@+id/tv_school_goods_name"
        android:layout_marginTop="8dp"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_school_goods_praice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_school_goods_name"
        android:layout_marginTop="8dp"
        android:text="¥50"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_12" />

</RelativeLayout>

