<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_f42e2e2e"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:id="@+id/layout_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_video_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/video_group_video_switch"
                android:gravity="center_horizontal"
                android:text="反转"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11" />


            <TextView
                android:id="@+id/tv_mic_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/video_group_mic_close"
                android:gravity="center_horizontal"
                android:text="关闭话筒"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_video_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/video_group_video_close"
                android:gravity="center_horizontal"
                android:text="关闭摄像头"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_transferhosting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/video_group_transferhosting"
                android:gravity="center_horizontal"
                android:text="主持移交"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_video_pk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/video_group_pk"
                android:gravity="center_horizontal"
                android:text="开启pk"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>