<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:id="@+id/pk_top_layput"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:drawableLeft="@mipmap/home_post_label_icon"
            android:drawablePadding="8dp"
            android:text="pk挑战"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_11"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pk_more_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@mipmap/post_detail_more_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_ececec" />

    </RelativeLayout>

    <View
        android:id="@+id/top_header_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/pk_top_layput"
        android:background="@color/color_f4f4f4"
        android:visibility="gone" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/top_header_view"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/error_user_icon"
        app:border_color="@color/color_00000000"
        app:border_width="0dp" />


    <TextView
        android:id="@+id/user_nickname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/user_img"
        android:maxWidth="100dp"
        android:singleLine="true"
        android:text="名称"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/alumnus_text"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_nickname_text"
        android:layout_alignTop="@+id/user_nickname_text"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/user_nickname_text"
        android:background="@drawable/shape_round_6_solid_7ec0ff"
        android:gravity="center"
        android:text="校友"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_size_9"
        android:visibility="visible" />


    <TextView
        android:id="@+id/user_age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_img"
        android:layout_alignLeft="@+id/user_nickname_text"
        android:drawableLeft="@mipmap/girl_icon"
        android:drawablePadding="3dp"
        android:singleLine="true"
        android:text="0岁"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/city_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_img"
        android:layout_toRightOf="@+id/user_age_text"
        android:maxWidth="50dp"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11"
        android:visibility="gone" />


    <TextView
        android:id="@+id/user_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_age_text"
        android:layout_alignTop="@+id/user_age_text"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/city_text"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="发布了PK挑战"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_11"
        android:textStyle="bold"
        android:visibility="gone" />


    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_nickname_text"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/user_nickname_text"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11" />


    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_img"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11"
        android:visibility="gone" />

    <TextView
        android:id="@+id/school_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_img"
        android:singleLine="true"
        android:paddingTop="6dp"
        android:text="学校名称"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_10"
        android:visibility="visible"
        android:layout_alignLeft="@+id/user_nickname_text"
        />



    <TextView
        android:id="@+id/pk_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/school_name_text_view"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/pk_icon"
        android:drawablePadding="9dp"
        android:singleLine="true"
        android:text="pk名称"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pk_tip_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pk_title_text"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="5dp"
        android:maxLines="3"
        android:text="我已参加此pk挑战，快来为我打call！"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/pk_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pk_tip_text_view"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="12dp"
        android:maxLines="3"
        android:text="pk内容"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14" />

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_below="@+id/pk_content_text"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/error_bg" />

        <ImageView
            android:id="@+id/video_play_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/video_play_icon" />

    </RelativeLayout>
</RelativeLayout>
