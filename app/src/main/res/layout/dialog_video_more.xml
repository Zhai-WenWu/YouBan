<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_f42e2e2e"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_video_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/video_group_video_switch"
            android:gravity="center_horizontal"
            android:text="反转"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_11" />


        <TextView
            android:id="@+id/tv_voice_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/video_group_mic_close"
            android:gravity="center_horizontal"
            android:text="关闭话筒"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/tv_video_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/video_group_video_close_n"
            android:gravity="center_horizontal"
            android:text="打开摄像头"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>


</RelativeLayout>