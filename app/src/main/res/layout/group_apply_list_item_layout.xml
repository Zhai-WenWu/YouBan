<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65.5dp"
    android:background="@color/color_ffffff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_view"
        android:layout_width="45.5dp"
        android:layout_height="45.5dp"
        android:layout_margin="10dp"
        android:src="@color/color_333333" />

    <TextView
        android:id="@+id/nicke_text_view"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circle_image_view"
        android:layout_toRightOf="@+id/circle_image_view"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="昵称"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tag_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nicke_text_view"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/add_time_view"
        android:layout_toRightOf="@+id/circle_image_view"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="申请加入“吃货群”"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/add_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="2018-12-11 12:20"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_11" />

    <ImageView
        android:id="@+id/ok_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="27dp"
        android:layout_toLeftOf="@+id/cancel_image_view"
        android:src="@mipmap/selected_icon" />

    <ImageView
        android:id="@+id/cancel_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:src="@mipmap/cancel_icon" />

    <TextView
        android:id="@+id/result_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:text="已同意"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_13"
        android:visibility="invisible" />


</RelativeLayout>