<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fafafa"
    android:paddingBottom="13dp">

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:visibility="gone"
        android:textColor="@color/color_333333"
        android:text="gasd"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:visibility="gone"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/tv_store_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:drawableEnd="@drawable/order_in_story_detail"
        android:layout_below="@+id/data"
        android:visibility="gone"
        android:drawablePadding="8dp"
        android:text="试用商品"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_15" />


    <TextView
        android:id="@+id/tv_school_orderstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="12dp"
        android:text="待收货"
        android:textColor="@color/color_ffb700"
        android:textSize="@dimen/text_size_12" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv__school_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_school_orderstatus"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:id="@+id/tv_school_postage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/rv__school_shop"
        android:layout_marginEnd="22dp"
        android:text="配送费：¥10"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_10" />

    <TextView
        android:id="@+id/tv_school_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_school_postage"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="13dp"
        android:text="共计1件商品"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_11" />

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_school_goods_num"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_refuse_refund"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/shape_round_10_solid_ffee00"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="拒绝退款"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_refund"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_round_10_solid_ffee00"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="确认退款"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_receipt"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_round_10_solid_ffee00"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="接单"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_school_goods_receipt"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_round_10_solid_ffee00"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="确认收货"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_10"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>