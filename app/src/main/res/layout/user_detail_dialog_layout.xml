<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/nick_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="昵称昵称"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/user_id_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nick_name_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="ID:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="26dp">

            <TextView
                android:id="@+id/num_friends_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/view_1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14" />

            <View
                android:id="@+id/view_1"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_centerHorizontal="true"
                android:background="@color/color_c4c4c4" />

            <TextView
                android:id="@+id/num_funs_view"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/view_1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="13.5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/view_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学校："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>


            <View
                android:id="@+id/view_2"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_centerHorizontal="true"
                android:background="@color/color_c4c4c4" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/view_2"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="33dp"
            android:background="@color/color_c4c4c4" />


        <TextView
            android:id="@+id/attention_view"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>


    <TextView
        android:id="@+id/report_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/layout_bottom"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/video_group_report"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="举报"
        android:textColor="@color/color_333333"
        android:textSize="11sp" />

</RelativeLayout>

