<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ea0c0c0c"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vote_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/color_99333333"
            android:gravity="center"
            android:padding="9dp"
            android:text="点击头像，为你喜欢的人投一票！"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />


        <GridView
            android:id="@+id/vote_user_gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:listSelector="@color/color_00000000"
            android:numColumns="4"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />

        <RelativeLayout
            android:id="@+id/vote_status_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mlqm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="名列前茅"
                android:textColor="@color/color_ff0000"
                android:textSize="@dimen/text_size_10" />

            <ImageView
                android:id="@+id/vote_status_bar_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mlqm_text"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/vote_status_bar" />

            <TextView
                android:id="@+id/ydtg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/vote_status_bar_img"
                android:padding="10dp"
                android:text="有待提高"
                android:textColor="@color/color_ffff00"
                android:textSize="@dimen/text_size_10" />


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
