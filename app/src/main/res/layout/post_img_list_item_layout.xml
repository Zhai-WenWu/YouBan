<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="115dp"
    android:layout_height="115dp">

    <!--<ImageView-->
    <!--android:id="@+id/imageView"-->
    <!--android:layout_width="115dp"-->
    <!--android:layout_height="115dp"-->
    <!--android:scaleType="fitCenter" />-->

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageView"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/error_bg"
        app:riv_border_color="#000000"
        app:riv_border_width="0dp"
        app:riv_corner_radius="9dp"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="clamp" />

    <TextView
        android:id="@+id/image_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_round_18_solid_66333333"
        android:drawableLeft="@mipmap/post_img_num_icon"
        android:drawablePadding="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="7.5dp"
        android:paddingRight="7.5dp"
        android:paddingTop="4dp"
        android:text="0"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_size_10"
        android:visibility="gone" />

</RelativeLayout>
