<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_10_stroke_d6d7dc_solid_ffffff"
        android:minHeight="180dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tip_text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_12"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_label_title"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/tip_text_view_2"
            android:layout_marginTop="17dp"
            android:background="@drawable/shape_round_20_solid_ffee00"
            android:gravity="center"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:text="标签"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_13" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_label_title"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="17dp"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/round_spinner_apple"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/delete_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:src="@mipmap/active_launch_tip_close_icon" />
    </RelativeLayout>


</RelativeLayout>
