<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <TextView
        android:id="@+id/active_top_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:drawableLeft="@mipmap/home_post_label_icon"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:text="圈友参加的PK挑战"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_11"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/more_img"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:scaleType="center"
        android:src="@mipmap/post_detail_more_icon" />

    <View
        android:id="@+id/line_view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/active_top_layout"
        android:background="@color/color_ececec" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_img"
        android:layout_width="35.5dp"
        android:layout_height="35.5dp"
        android:layout_below="@+id/line_view_1"
        android:layout_marginLeft="11.5dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:border_color="@color/color_00000000"
        app:border_width="0dp" />

    <TextView
        android:id="@+id/school_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_age_text"
        android:layout_alignLeft="@+id/user_nickname_text"
        android:layout_marginTop="6dp"
        android:singleLine="true"
        android:text="北京清华大学"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11"/>



    <TextView
        android:id="@+id/user_nickname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_img"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/user_img"
        android:maxWidth="100dp"
        android:singleLine="true"
        android:text="名称"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_13" />

    <ImageView
        android:id="@+id/user_level_img"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/user_nickname_text"
        android:layout_alignTop="@+id/user_nickname_text"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/user_nickname_text"
        android:src="@mipmap/level_one" />

    <ImageView
        android:id="@+id/alumnus_img"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/user_level_img"
        android:layout_alignTop="@+id/user_level_img"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/user_level_img"
        android:src="@mipmap/alumns_icon"
        android:visibility="visible" />


    <TextView
        android:id="@+id/add_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_view_1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/user_nickname_text"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:text="2017-09-22"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_time_view"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/user_age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_nickname_text"
        android:layout_below="@+id/user_nickname_text"
        android:layout_marginTop="7dp"
        android:drawableLeft="@mipmap/girl_icon"
        android:drawablePadding="5dp"
        android:singleLine="true"
        android:text="0 岁"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/city_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_age_text"
        android:layout_below="@+id/user_nickname_text"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:text="北京"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11"
        android:visibility="visible"
        android:maxEms="7"/>



    <ImageView
        android:id="@+id/post_stick_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_view_1"
        android:layout_toLeftOf="@+id/add_time_view"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/top_icon"
        android:visibility="visible" />

    <TextView
        android:id="@+id/pk_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_img"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:drawableLeft="@mipmap/pk_icon"
        android:drawablePadding="9dp"
        android:text="pk名称"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_15"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/pk_tip_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pk_title_text"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="5dp"
        android:maxLines="3"
        android:text="我已参加此pk挑战，快来为我打call！"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/pk_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pk_tip_text_view"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="11.5dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14" />


    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/pk_content_text"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:src="@color/color_e6e6e6" />

        <ImageView
            android:id="@+id/video_play_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/video_play_icon"
            android:visibility="visible" />


    </RelativeLayout>

    <View
        android:id="@+id/line_view_2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/image_layout"
        android:layout_alignWithParentIfMissing="true"
        android:background="@color/color_f4f4f4"
        android:visibility="visible" />

</RelativeLayout>