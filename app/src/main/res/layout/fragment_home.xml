<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_ffffff">

    <EditText android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@+id/title_fragment"
        android:id="@+id/search_edittext"
        android:background="@drawable/shape_round_10_solid_f4f4f4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/search_textview"
        android:drawableLeft="@mipmap/home_search_icon"
        android:drawablePadding="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="40dp"
        android:hint="搜索"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/color_333333"
        android:singleLine="true"
        android:editable="false"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_tab_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_edittext"
       />

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f7f7f7"
        android:layout_below="@+id/home_tab_recycler_view"
        android:id="@+id/line_view"/>


    <FrameLayout
        android:id="@+id/video_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_view"
        />

    <ImageView
        android:id="@+id/iv_public"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/post_publish_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="79.5dp"
        android:layout_marginRight="28dp"/>


</RelativeLayout>
