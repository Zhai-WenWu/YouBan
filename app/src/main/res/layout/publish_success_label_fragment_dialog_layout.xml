<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:background="@drawable/shape_round_10_stroke_d6d7dc_solid_ffffff"
        android:paddingBottom="38dp">

        <TextView
            android:id="@+id/tip_text_view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:gravity="center"
            android:text="您的帖子已成功发布到"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_16"
            android:visibility="visible" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_label"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/tip_text_view_1"
            android:padding="17dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tip_text_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_label"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:text="稍后您可去查看"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14"
            android:visibility="visible" />


    </RelativeLayout>


</RelativeLayout>
