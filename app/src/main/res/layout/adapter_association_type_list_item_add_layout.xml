<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <RelativeLayout
        android:id="@+id/layout_view_1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:text="文艺青年文艺青年"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text_view"
            android:text="20个圈子"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_11" />


        <ImageView
            android:id="@+id/image_view"
            android:layout_width="20.5dp"
            android:layout_height="20.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/selected_icon" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/pop_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/new_icon"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/layout_view_2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:visibility="invisible">


        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/add_icon" />

        <TextView
            android:id="@+id/add_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自建圈子标签"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_17" />

    </LinearLayout>


</RelativeLayout>
