<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="331dp"
        android:layout_height="136dp"
        android:background="@drawable/shape_round_10_stroke_d6d7dc_solid_ffffff">

        <TextView
            android:id="@+id/title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15" />


        <Button
            android:id="@+id/btn_view_1"
            android:layout_below="@+id/title_view"
            android:layout_toLeftOf="@+id/divid_view"
            android:layout_marginTop="30dp"
            android:layout_width="76dp"
            android:layout_height="36dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15"
            android:background="@drawable/shape_round_10_stroke_a5a5a5"/>

        <View
            android:id="@+id/divid_view"
            android:layout_below="@+id/title_view"
            android:layout_width="24dp"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btn_view_2"
            android:layout_toRightOf="@+id/divid_view"
            android:layout_below="@+id/title_view"
            android:layout_marginTop="30dp"
            android:layout_width="76dp"
            android:layout_height="36dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15"
            android:background="@drawable/shape_round_10_stroke_a5a5a5"/>

    </RelativeLayout>


</LinearLayout>