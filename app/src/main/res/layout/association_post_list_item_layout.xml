<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_img"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:border_color="@color/color_00000000"
        app:border_width="0dp" />


    <TextView
        android:id="@+id/user_nickname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_img"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/user_img"
        android:maxWidth="100dp"
        android:singleLine="true"
        android:text="名称"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/school_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_age_text"
        android:layout_alignLeft="@+id/user_nickname_text"
        android:layout_marginTop="6dp"
        android:singleLine="true"
        android:text="北京清华大学"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11"
        android:maxWidth="100dp"/>

    <ImageView
        android:id="@+id/ismatch_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/school_text_view"
        android:layout_alignBottom="@+id/school_text_view"
        android:layout_toRightOf="@+id/school_text_view"
        android:src="@mipmap/post_match_error_icon"
        android:layout_marginLeft="7.5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ismatch_text_view"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/user_nickname_text"
        android:layout_alignTop="@+id/user_nickname_text"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/user_nickname_text"
        android:text="标签名称"
        android:visibility="gone"
        android:textSize="@dimen/text_size_9"
        android:textColor="@color/color_ffffff"
        android:gravity="center"
        android:singleLine="true"
        android:maxWidth="55dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"/>

    <ImageView
        android:id="@+id/user_level_text"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/user_nickname_text"
        android:layout_alignTop="@+id/user_nickname_text"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ismatch_text_view"
        android:src="@mipmap/level_one" />

    <ImageView
        android:id="@+id/alumnus_text"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/user_nickname_text"
        android:layout_alignTop="@+id/user_nickname_text"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/user_level_text"
        android:src="@mipmap/alumns_icon"
        android:visibility="visible" />


    <TextView
        android:id="@+id/user_age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_nickname_text"
        android:layout_below="@+id/user_nickname_text"
        android:layout_marginTop="7dp"
        android:drawableLeft="@mipmap/girl_icon"
        android:drawablePadding="3dp"
        android:singleLine="true"
        android:text="0岁"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11" />


    <TextView
        android:id="@+id/city_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_nickname_text"
        android:paddingLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/user_age_text"
        android:maxEms="7"
        android:singleLine="true"
        android:text="北京"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11"
        android:visibility="visible" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_age_text"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/city_text"
        android:singleLine="true"
        android:text="火星"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11" />


    <ImageView
        android:id="@+id/post_stick_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/more_img"
        android:src="@mipmap/top_icon"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/more_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/user_nickname_text"
        android:layout_marginRight="15dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:src="@mipmap/post_detail_more_icon" />


    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/user_age_text"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:text="2017-09-22"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/recruit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/school_text_view"
        android:layout_alignLeft="@+id/user_layout"
        android:layout_marginLeft="15dp"
        android:paddingTop="15dp"
        android:text="店员招聘中，应聘戳"
        android:drawableRight="@mipmap/recruit_forward_icon"
        android:textColor="@color/color_507daf"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone" />


    <TextView
        android:id="@+id/content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recruit_text"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:maxLines="2"
        android:paddingTop="0dp"
        android:text="帖子内容"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14" />

    <RelativeLayout
        android:id="@+id/linear_image_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_text"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="12dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@color/color_e6e6e6" />

        <ImageView
            android:id="@+id/video_play_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/video_play_icon"
            android:visibility="gone" />


    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_image_two"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="12dp"
        android:visibility="gone" />


    <TextView
        android:id="@+id/post_label_one_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/post_label_two_layout"
        android:layout_alignTop="@+id/post_label_two_layout"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@mipmap/home_post_label_icon"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="一级标签"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/post_label_two_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/recycler_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/post_label_one_text"
        android:background="@drawable/shape_round_20_stroke_333333"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/post_label_two_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="4"
            android:singleLine="true"
            android:text="二级标签"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_10" />

    </RelativeLayout>

    <TextView
        android:id="@+id/share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/praise_text"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/praise_text"
        android:drawableLeft="@mipmap/share_small_icon"
        android:drawablePadding="5dp"
        android:text="0"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/praise_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_image"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/comment_text"
        android:drawableLeft="@mipmap/home_post_praise_nor_icon"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="0"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/recycler_image"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@mipmap/home_post_comment_icon"
        android:drawablePadding="5dp"
        android:text="0"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_11" />

    <View
        android:id="@+id/line_view_2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/comment_text"
        android:layout_marginTop="15dp"
        android:background="@color/color_f4f4f4"
        android:visibility="visible" />

</RelativeLayout>
