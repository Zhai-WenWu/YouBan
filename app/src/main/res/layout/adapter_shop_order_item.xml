<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fafafa"
    android:paddingBottom="13dp">

    <TextView
        android:id="@+id/tv_shop_orderstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="12dp"
        android:text="待收货"
        android:textColor="@color/color_ffb700"
        android:textSize="@dimen/text_size_12" />

    <ImageView
        android:id="@+id/iv_shop_productimg"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/tv_shop_orderstatus"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/tv_shop_productname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shop_orderstatus"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/iv_shop_productimg"
        android:lines="2"
        android:text="商品名称"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/tv_rmb_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shop_productname"
        android:layout_marginTop="7dp"
        android:layout_toStartOf="@+id/tv_shop_productprice"
        android:text="原价: "
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_shop_productprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shop_productname"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="7dp"
        android:layout_toStartOf="@+id/tv_rmb"
        android:text="288"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shop_productname"
        android:layout_marginTop="7dp"
        android:layout_toStartOf="@+id/tv_shop_now_productprice"
        android:text="活动价: ¥"
        android:textColor="@color/color_ffb700"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_shop_now_productprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_shop_productname"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="7dp"
        android:text="288"
        android:textColor="@color/color_ffb700"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_list_shop_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shop_now_productprice"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/tv_list_shop_totle_praice"
        android:text="×1"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/tv_list_shop_totle_praice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_shop_now_productprice"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="8dp"
        android:text="¥50"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11" />


    <TextView
        android:id="@+id/tv_shop_goods_receipt"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_list_shop_totle_praice"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/shape_round_10_solid_ffee00"
        android:gravity="center"
        android:text="确认收货"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_10" />


</RelativeLayout>