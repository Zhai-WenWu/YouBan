<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@color/color_ffffff">

    <View android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/color_f4f4f4"
        android:id="@+id/top_header_view"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/nearby_user_num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_13"
        android:text="你附近有0人参加"
        android:layout_below="@+id/top_header_view"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"/>

    <ImageView
        android:id="@+id/organ_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/nearby_user_num_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"/>


    <TextView
        android:id="@+id/organ_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/organ_img"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_16"
        android:text="圈子名称"
        android:layout_toLeftOf="@+id/orgain_join_text"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/nearby_user_num_text"/>

    <TextView
        android:id="@+id/organ_user_num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/organ_img"
        android:layout_below="@+id/organ_name_text"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_12"
        android:text="成员 0"/>

    <TextView
        android:id="@+id/organ_post_num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/organ_user_num_text"
        android:layout_below="@+id/organ_name_text"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_12"
        android:text="帖子 0"/>

    <TextView
        android:id="@+id/orgain_join_text"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/nearby_user_num_text"
        android:textColor="@color/color_333333"
        android:text="加入"
        android:textSize="@dimen/text_size_12"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_round_10_solid_ffee00"
        android:gravity="center"
        android:layout_marginRight="15dp"/>


</RelativeLayout>