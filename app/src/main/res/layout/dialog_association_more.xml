<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_330c0c0c"
    android:id="@+id/out_layout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@mipmap/bg_shop_operation_more_pop"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_association_info"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:drawableLeft="@mipmap/store_edit_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_e6e6e6"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_association_share"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/share_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:text="分享该圈子"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
