<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f4">

    <fragment
        android:id="@+id/title_layout"
        android:name="cn.bjhdltcdn.p2plive.ui.fragment.ToolBarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_tool_bar_layout" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/edit_context"
        android:layout_below="@+id/title_layout"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_round_0_stroke_bebebe_solid_ffffff"
        android:gravity="center"
        android:hint="请输入您的PK挑战主题"
        android:maxLength="20"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_cccccc"
        android:textSize="@dimen/text_size_15" />

    <EditText
        android:id="@+id/edit_context"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/edit_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_round_0_stroke_bebebe_solid_ffffff"
        android:gravity="top"
        android:hint="简单描述挑战规则或要求"
        android:maxLength="300"
        android:paddingBottom="25dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColorHint="@color/color_cccccc"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/tv_num_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_context"
        android:layout_alignEnd="@+id/edit_context"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:text="0/300"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_11" />


    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="47.5dp"
        android:layout_marginRight="47.5dp"
        android:background="@drawable/selector_start_pk_btn"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_16" />

</RelativeLayout>