<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_cc2e2e2e" />

    <ScrollView
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="本场活动已结束"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_25" />


            <!-- 活动成就 -->

            <TextView
                android:id="@+id/tips_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="活动成就"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17" />

            <View
                android:layout_width="100dp"
                android:layout_height="0.5dp"
                android:layout_below="@+id/title_view"
                android:layout_marginRight="11dp"
                android:layout_marginTop="26dp"
                android:layout_toLeftOf="@+id/tips_view"
                android:background="@color/color_727272" />

            <View
                android:layout_width="100dp"
                android:layout_height="0.5dp"
                android:layout_below="@+id/title_view"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="26dp"
                android:layout_toRightOf="@+id/tips_view"
                android:background="@color/color_727272" />


            <TextView
                android:id="@+id/active_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tips_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_ffda44"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/active_time_tips_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/active_time_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="活动时长"
                android:textColor="@color/color_cecece"
                android:textSize="@dimen/text_size_11" />


            <!-- 获得支持 -->

            <TextView
                android:id="@+id/tip_view_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/active_time_tips_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="获得支持"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17" />

            <View
                android:layout_width="100dp"
                android:layout_height="0.5dp"
                android:layout_below="@+id/active_time_tips_view"
                android:layout_marginRight="11dp"
                android:layout_marginTop="26dp"
                android:layout_toLeftOf="@+id/tip_view_4"
                android:background="@color/color_727272" />

            <View
                android:layout_width="100dp"
                android:layout_height="0.5dp"
                android:layout_below="@+id/active_time_tips_view"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="26dp"
                android:layout_toRightOf="@+id/tip_view_4"
                android:background="@color/color_727272" />

            <LinearLayout
                android:id="@+id/layout_view_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tip_view_4"
                android:layout_marginTop="10dp"
                android:divider="@color/color_727272"
                android:orientation="vertical"
                android:showDividers="middle" />

        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/finish_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17.5dp"
        android:layout_marginTop="17.5dp"
        android:padding="3dp"
        android:src="@drawable/close_grey_icon" />
</RelativeLayout>


