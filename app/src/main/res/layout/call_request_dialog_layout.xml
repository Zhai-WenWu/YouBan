<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/color_e0000000"
        android:layout_centerInParent="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/color_d8d8d8"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/user_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/user_image_view"
            android:text="超级玛丽苏" />

        <TextView
            android:id="@+id/user_age_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/user_name_view"
            android:layout_toRightOf="@+id/user_image_view"
            android:gravity="center_vertical"
            android:text="女 22岁  江苏 南京" />


        <TextView
            android:id="@+id/text_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_image_view"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="邀请你通话" />

        <Button
            android:id="@+id/cancel_view"
            android:layout_below="@+id/user_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:text="知道了" />
    </RelativeLayout>

</RelativeLayout>