<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fafafa">

    <fragment
        android:id="@+id/title_fragment"
        android:name="cn.bjhdltcdn.p2plive.ui.fragment.TitleFragment"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@+id/title_fragment"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="36dp"
        android:background="@null"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_cccccc"
        android:textSize="15sp" />

    <View
        android:id="@+id/view_line_phone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/edit_phone"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="7.5dp"
        android:background="@color/color_cccccc" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@+id/view_line_phone"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:hint="请设置密码，6-20位数字、字母或符号"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_cccccc"
        android:textSize="15sp" />

    <View
        android:id="@+id/view_line_password"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/edit_password"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="7.5dp"
        android:background="@color/color_cccccc" />

    <RelativeLayout
        android:id="@+id/rela_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line_password"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20.5dp">

        <EditText
            android:id="@+id/edit_code"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_alignBottom="@+id/tv_getcode"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@id/tv_getcode"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_cccccc"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_getcode"
            android:layout_width="65dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_round_10_stroke_999999"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/color_b7b7b7"
            android:textSize="11sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line_code"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rela_code"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="7.5dp"
        android:background="@color/color_cccccc" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/view_line_code"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="122dp"
        android:background="@drawable/shape_round_10_solid_e6e6e6"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/color_333333"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tb_agr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="登录即代表同意" />

        <TextView
            android:id="@+id/tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textColor="@color/color_333333"
            android:layout_toRightOf="@+id/tb_agr"
            android:text="用户许可协议" />
    </LinearLayout>


</RelativeLayout>