<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_13140d"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/text_view_yk_bean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/text_view_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/pay_view"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_round_10_stroke_ffda44_width_1"
                android:gravity="center"
                android:padding="1dp"
                android:text="充值"
                android:textColor="@color/color_ffda44"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>


        <cn.bjhdltcdn.p2plive.widget.CustomViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:layout_below="@+id/layout_view"
            android:background="@color/color_040404" />

        <LinearLayout
            android:id="@+id/item_layout_view"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_below="@+id/view_pager"
            android:background="@color/color_040404"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="3dp" />

        <LinearLayout
            android:id="@+id/item_layout_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_layout_view"
            android:background="@color/color_040404"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="7.5dp"
            android:paddingLeft="10dp"
            android:paddingRight="40dp"
            android:paddingTop="7.5dp">

            <TextView
                android:id="@+id/send_user_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_10_stroke_ffda44_width_1"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:minWidth="51dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="送给1号"
                android:textColor="@color/color_ffda44"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/send_gift_count_view"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@drawable/shape_round_10_stroke_ffda44_width_1"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="1"
                android:textColor="@color/color_ffda44"
                android:textSize="@dimen/text_size_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/send_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_10_solid_ffee00"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="13.5dp"
                android:paddingRight="13.5dp"
                android:paddingTop="5dp"
                android:text="赠送"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>