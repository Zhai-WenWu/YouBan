<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <fragment
        android:id="@+id/title_fragment"
        android:name="cn.bjhdltcdn.p2plive.ui.fragment.TitleFragment"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        tools:layout="@layout/fragment_title" />

         <TextView
             android:id="@+id/tip_four"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="账户余额：0"
             android:textSize="@dimen/text_size_14"
             android:textColor="@color/color_333333"
             android:layout_marginTop="20.5dp"
             android:layout_below="@+id/title_fragment"
             android:layout_marginLeft="10dp"/>

         <TextView
             android:id="@+id/pay_off_text_view"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/color_333333"
             android:text="发工资"
             android:textSize="@dimen/text_size_12"
             android:background="@drawable/shape_round_10_solid_ffee00"
             android:paddingTop="4dp"
             android:paddingBottom="4dp"
             android:paddingLeft="7dp"
             android:paddingRight="7dp"
             android:layout_marginTop="15.5dp"
             android:layout_marginRight="10dp"
             android:gravity="center"
             android:layout_alignParentRight="true"
             android:layout_below="@+id/title_fragment" />

    <View android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f7f7f7"
        android:layout_below="@+id/tip_four"
        android:layout_marginTop="15dp"
        android:id="@+id/line_view"/>

         <TextView
             android:id="@+id/tip_five"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/color_333333"
             android:text="提现金额"
             android:textSize="@dimen/text_size_14"
             android:layout_below="@+id/line_view"
             android:layout_marginTop="11.5dp"
             android:layout_alignLeft="@+id/tip_four"/>

        <TextView
            android:id="@+id/tip_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:text="¥"
            android:textSize="@dimen/text_size_16"
            android:layout_below="@+id/tip_five"
            android:layout_alignLeft="@+id/tip_four"
            android:layout_marginTop="6dp"/>

         <EditText android:layout_width="match_parent"
             android:background="@color/color_00000000"
             android:layout_height="wrap_content"
             android:id="@+id/charge_edit"
             android:text=""
             android:textSize="@dimen/text_size_16"
             android:textColor="@color/color_333333"
             android:gravity="left"
             android:inputType="numberDecimal"
             android:singleLine="true"
             android:textColorHint="@color/color_999999"
             android:paddingLeft="5dp"
             android:layout_below="@+id/tip_five"
             android:layout_marginTop="6dp"
             android:layout_toRightOf="@+id/tip_seven"/>



         <View android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:background="@color/color_999999"
             android:layout_toRightOf="@+id/tip_five"
             android:layout_below="@+id/charge_edit"
             android:layout_marginTop="4.5dp"
             android:layout_alignLeft="@+id/tip_four"
             android:layout_marginRight="10dp"
             android:id="@id/line_view_1"/>

         <TextView
             android:id="@+id/tip_sex"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="可提现金额0元"
             android:textSize="@dimen/text_size_13"
             android:textColor="@color/color_333333"
             android:layout_below="@+id/line_view_1"
             android:layout_marginTop="11dp"
             android:layout_alignLeft="@+id/tip_four"/>


    <TextView
        android:id="@+id/tip_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提现规则"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_999999"
        android:layout_below="@+id/tip_sex"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tip_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前仅支持支付宝提现"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_999999"
        android:layout_below="@+id/tip_one"
        android:layout_alignLeft="@+id/tip_one"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tip_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日可提现一次，最大金额不能大于5W，手续费5%"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_999999"
        android:layout_below="@+id/tip_two"
        android:layout_alignLeft="@+id/tip_one"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/withdrw_cash_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:layout_below="@+id/tip_three"
        android:text="立即提现"
        android:textSize="@dimen/text_size_16"
        android:background="@drawable/shape_round_10_solid_ffee00"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:gravity="center"/>


</RelativeLayout>