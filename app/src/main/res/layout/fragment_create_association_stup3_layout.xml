<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <LinearLayout
        android:id="@+id/layout_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别限制："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14" />

        <RadioGroup
            android:id="@+id/radiogroup_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/selector_group_radiobutton"
                android:drawablePadding="10dp"
                android:text="不限"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_13" />

            <RadioButton
                android:id="@+id/radio_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/selector_group_radiobutton"
                android:drawablePadding="10dp"
                android:text="仅男生加入"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_13" />

            <RadioButton
                android:id="@+id/radio_btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/selector_group_radiobutton"
                android:drawablePadding="10dp"
                android:text="仅女生加入"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_13" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="内容可见："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14" />

        <RadioGroup
            android:id="@+id/radiogroup_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="5.5dp"
                android:drawableStart="@drawable/selector_group_radiobutton"
                android:text="全部可见"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/radio_btn_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="12dp"
                android:button="@null"
                android:drawablePadding="5.5dp"
                android:drawableStart="@drawable/selector_group_radiobutton"
                android:text="圈子可见"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14" />

        </RadioGroup>


    </LinearLayout>

    <View
        android:id="@+id/line_view_1"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_below="@+id/layout_view_1"
        android:layout_marginTop="15dp"
        android:background="@color/color_e6e6e6" />

    <LinearLayout
        android:id="@+id/layout_view_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_view_1"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/checkbox_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/say_love_publish_check_bg"
            android:drawablePadding="10dp"
            android:text="我已认真阅读并同意"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/society_protocol_view_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《圈子管理规范》"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>


    <Button
        android:id="@+id/create_btn_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_round_10_solid_ffee00"
        android:text="创建"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone" />

</RelativeLayout>
