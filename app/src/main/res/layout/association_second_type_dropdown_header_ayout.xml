<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/layout_view_2"
        android:layout_toLeftOf="@+id/chevron_image"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center|left"
        android:showDividers = "middle"
        android:layout_marginLeft="10dp"
        android:divider="@drawable/shape_linear_layout_divider_layout"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/chevron_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/home_recommend_sort_close_icon"
        tools:targetApi="lollipop" />


</RelativeLayout>