<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_33333333"
    >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_fafafa"
        android:id="@+id/layout_in">

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="最新发布"
            android:textColor="@color/color_666666"
            android:id="@+id/order_by_time_tv"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_14"/>


        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="最热帖子"
            android:textColor="@color/color_666666"
            android:id="@+id/order_by_heat_tv"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_14"
            android:visibility="visible"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="离我最近"
            android:textColor="@color/color_666666"
            android:id="@+id/order_by_diatance_tv"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_14"/>



        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_out"
        android:layout_below="@+id/layout_in"/>

</RelativeLayout>