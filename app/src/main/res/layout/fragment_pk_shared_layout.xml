<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@id/root_layout">

    <TextView
        android:id="@+id/left_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        android:text="分享转发了"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_13"
        android:paddingTop="10dp"
        android:paddingLeft="12dp"/>

    <TextView
        android:id="@+id/form_user_nickname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="120dp"
        android:singleLine="true"
        android:text="名称"
        android:textColor="@color/color_576b95"
        android:textSize="@dimen/text_size_13"
        android:paddingTop="10dp"
        android:layout_toRightOf="@+id/left_tip"/>

    <TextView
        android:id="@+id/right_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        android:text="的PK"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_13"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@+id/form_user_nickname_text"/>

    <TextView
        android:id="@+id/pk_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/form_user_nickname_text"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/pk_icon"
        android:drawablePadding="9dp"
        android:text="pk名称"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_15"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/pk_tip_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pk_title_text"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="5dp"
        android:maxLines="3"
        android:text="我已参加此pk挑战，快来为我打call！"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/pk_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pk_tip_text_view"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14"
        android:text=""/>

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/pk_content_text"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/error_bg" />

        <ImageView
            android:id="@+id/video_play_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/video_play_icon" />

    </RelativeLayout>
</RelativeLayout>