<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <View
        android:id="@+id/view_line_4"
        android:layout_width="match_parent"
        android:layout_height="6.5dp"
        android:layout_alignWithParentIfMissing="true"
        android:background="@color/color_e6e6e6"/>

    <TextView
        android:id="@+id/tip_text_view"
        android:layout_below="@+id/view_line_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="14.5dp"
        android:paddingLeft="10dp"
        android:text="圈子权限"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14" />


    <TextView
        android:id="@+id/tip_text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip_text_view"
        android:layout_marginBottom="10.5dp"
        android:paddingLeft="10dp"
        android:text="性别限制："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/sex_limit_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip_text_view"
        android:layout_toRightOf="@+id/tip_text_view_1"
        android:text="不限"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/tip_text_view_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip_text_view_1"
        android:layout_marginBottom="10.5dp"
        android:paddingLeft="10dp"
        android:text="圈子类型："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/join_limit_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip_text_view_1"
        android:layout_toRightOf="@+id/tip_text_view_2"
        android:text="无需申请直接加入"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/tip_text_view_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip_text_view_2"
        android:layout_marginBottom="15.5dp"
        android:paddingLeft="10dp"
        android:text="圈子成员匿名发布："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/anonymous_limit_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip_text_view_2"
        android:layout_toRightOf="@+id/tip_text_view_4"
        android:text="是"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_13" />


</RelativeLayout>