<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/position_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:text="1"
        android:textColor="@color/white"
        android:textStyle="bold" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/position_view"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/nick_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/send_goldcount_view"
        android:layout_toRightOf="@+id/user_image_view"
        android:singleLine="true"
        android:text="一米阳光"
        android:textColor="@color/color_2ef0d0"
        android:textSize="@dimen/text_size_11" />


    <TextView
        android:id="@+id/send_goldcount_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/attention_view"
        android:gravity="center"
        android:text="1234567金币"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/attention_view"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_round_25_solid_ffda44"
        android:gravity="center"
        android:text="已关注"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/user_image_view" />


</RelativeLayout>