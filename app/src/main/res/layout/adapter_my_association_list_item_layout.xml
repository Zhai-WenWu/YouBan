<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/color_ffffff"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false">

    <RelativeLayout
        android:id="@+id/layout_view_1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_view"
            android:layout_above="@+id/text_view_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/color_ffee00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/image_view"
            android:layout_centerInParent="true"
            android:background="@color/color_99333333"
            android:gravity="center">

            <TextView
                android:id="@+id/text_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="成员 1234"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/text_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="帖子 12345"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size_10" />

        </LinearLayout>


        <TextView
            android:id="@+id/text_view_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="140dp"
            android:singleLine="true"
            android:text="篮球社篮球社篮球社篮球社"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

</android.support.v7.widget.CardView>